{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["*", "@types"],
  "ts-node": {
    "files": true
  }
}
